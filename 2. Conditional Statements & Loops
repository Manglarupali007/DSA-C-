//Conditional Statements
// â€¢ if-else
#include<iostream>
using namespace std;
int main(){
int age=19;
if(age>18){
    cout<<"Yes";
}
else{
    cout<<"No";
}
    return 0;
}

----------------------

//CHECK EVEN OR ODD
#include<iostream>
using namespace std;
int main(){
    int a;
    cin>>a;
    if(a%2==0){
        cout<<"Even";
    }
    else{
        cout<<"Odd";
    }
}

